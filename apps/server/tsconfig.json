{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "allowImportingTsExtensions": false,
    "noEmit": true,

    "baseUrl": "./src",
    "paths": {
      "*": ["*", "../*", "../../*"]
    },

    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "express"]

  },
  
  "include": ["src/**/*", "src/types/**/*.d.ts"]


}
